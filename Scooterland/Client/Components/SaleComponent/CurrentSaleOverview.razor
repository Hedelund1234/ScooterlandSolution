@using Scooterland.Shared.Models
@if (products == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Product Id</th>
				<th>Name</th>
				<th>Type</th>
				<th>Price</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in products)
			{
				<tr>
					<td>@item.ProductId</td>
					<td>@item.Name</td>
					<td>@item.Type</td>
					<td>@item.Price</td>
				</tr>
			}
		</tbody>
	</table>
}


@code {
	private List<Product> products = new List<Product>();

	Product p1 = new Product { ProductId = 1, Name = "Dæk", Type = "Vare", Price = 250 };
	Product p2 = new Product { ProductId = 2, Name = "Olie", Type = "Vare", Price = 89.95M };
	Product p3 = new Product { ProductId = 3, Name = "Ko", Type = "Vare", Price = 22.22M };

	protected override async Task OnInitializedAsync()
	{
		products.Add(p1);
		products.Add(p2);
		products.Add(p3);
	}

}
